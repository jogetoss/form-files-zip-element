[
    {
       "title":"@@form.formfileszipelement.edit@@",
       "properties":[
         {
             "name":"id",
             "label":"@@form.formfileszipelement.id@@",
             "type":"autocomplete",
             "required":"True",
             "regex_validation":"^[a-zA-Z0-9_]+$",
             "validation_message":"@@form.formfileszipelement.invalidId@@",
             "options_callback":"FormBuilder.getAllFieldOptions"
         },
         {
            "name":"showLabel",
            "label":"@@form.formfileszipelement.showLabel@@",
            "type":"checkbox",
            "value":"False",
            "options":[
               {
                  "value":"true",
                  "label":""
               }
            ]
         },
         {
             "name":"label",
             "label":"@@form.formfileszipelement.label@@",
             "type":"textfield",
             "value":"@@org.joget.marketplace.formfileszipelement.label@@",
             "control_field": "showLabel",
             "control_value": "true"
         },
        
         {
            "name":"buttonLabel",
            "label":"@@form.formfileszipelement.buttonLabel@@",
            "type":"textfield",
            "required":"True",
            "value":"@@form.formfileszipelement.button@@"
         },
         {
            "name":"formDefId",
            "label":"@@form.formfileszipelement.formDefId@@",
            "type":"selectbox",
            "options_ajax":"[CONTEXT_PATH]/web/json/console/app[APP_PATH]/forms/options",
            "required":"True"
         },
        {
            "name":"downloadConfig",
            "label":"@@form.formfileszipelement.downloadConfig@@",
            "type":"selectbox",
            "required" : "True",
            "options":[
              {
                 "value":"downloadAll",
                 "label":"@@form.formfileszipelement.downloadAll@@"
              },
              {
                "value":"downloadSelectedFields",
                "label":"@@form.formfileszipelement.downloadSelectedFields@@"
             }
           ]
        },
        {
            "name":"downloadFields",
            "label":"@@form.formfileszipelement.downloadFields@@",
            "type":"grid",
            "control_field": "downloadConfig",
            "control_value": "downloadSelectedFields",
            "columns":[
               {
                  "key":"field",
                  "label":"@@form.formfileszipelement.fieldId@@",
                  "options_ajax_on_change":"formDefId",
                  "options_ajax":"[CONTEXT_PATH]/web/json/console/app[APP_PATH]/form/columns/options"
               }
            ]
         }
      ]
   }
 ]